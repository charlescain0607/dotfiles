general {
        colors = false
        interval = 5
}

#order += "ipv6"
#order += "disk /"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless _first_"
#order += "ethernet _first_"
order += "battery 0"
#order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "ï‡«  %essid"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage"
	integer_battery_capacity = true
	status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_full = "â˜» FULL"
	path = "/sys/class/power_supply/BAT1/uevent"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "pulse:1"
}

tztime local {
        format = "%A, %b %d, %I:%M:%p"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
