[module/date]
	type = internal/date
	interval = 5

	date =
	date-alt = %A %b %d

	time = %l:%M %P
	time-alt = %l:%M %P

	format-prefix =
	format-prefix-foreground = ${colors.foreground-alt}
	format-underline = ${colors.primary}

	label = %time% %date%



