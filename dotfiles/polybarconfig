[colors]
	background = ${xrdb:background:#222}
	background-alt = ${xrdb:color0:#222}
	foreground = ${xrdb:foreground:#222}
	foreground-alt = ${xrdb:color7:#222}
	primary = ${xrdb:color1:#222}
	polybar = ${xrdb:color2:#222}
	alert = ${xrdb:color3:#222}
	
	mem = ${xrdb:color7:#222}
	cpu = ${xrdb:color7:#222}
	disk = ${xrdb:color7:#222}
	audio = ${xrdb:color7:#222}
	bright  = ${xrdb:color7:#222}
	wifi = ${xrdb:color7:#222}
	bat = ${xrdb:color7:#222}
	i3 = ${xrdb:color2:#222}

[bar/example]
	width = 100%
	height = 50
	radius = 0.0
;	bottom = true
	fixed-center = true

;	background = ${colors.background}
	background = #0000000
	foreground = ${colors.foreground}

	line-size = 0
	line-color = ${colors.primary}

	border-size = 0
;	border-color = #3f000000
;	border-color = #0000000
	border-color = ${colors.background}

	padding = 2
	module-margin = 2

	font-0 = Lekton Nerd Font:style=Bold:pixelsize=18;2

	modules-left = manjarosymb memory cpu filesystem 
;	modules-left = manjarosymb i3
;	modules-center = i3 
	modules-right = pulseaudio xbacklight wlan battery date 

	cursor-click = pointer
	cursor-scroll = ns-resize

[bar/tray]
	width = 100%
	height = 65
	radius = 0.0
	bottom = true
	fixed-center = true

	background = #0000000
	foreground = ${colors.foreground}

	line-size = 0
	line-color = ${colors.primary}

	border-size = 0
	border-color = #0000000

	padding = 2
	module-margin = 2

	font-0 = Lekton Nerd Font:style=Bold:pixelsize=30;2

	modules-center = i3 

	cursor-click = pointer
	cursor-scroll = ns-resize



[module/filesystem]
	type = internal/fs
	interval = 600

	mount-0 = /

	format-mounted = <label-mounted>
	format-unmounted = <label-unmounted>

	label-mounted =  %mountpoint%: %percentage_used%%
	label-unmounted = %mountpoint% not mounted
	label-mounted-foreground = ${colors.disk}



[module/manjarosymb]
	type = custom/text
	content = 
	content-foreground = ${colors.polybar}



[module/i3]
	type = internal/i3
	format = <label-state> <label-mode>
	index-sort = true
	wrapping-scroll = false

;	Only show workspaces on the same output as the bar
;	pin-workspaces = true

	label-mode-padding = 2
	label-mode-foreground = #000
	label-mode-background = ${colors.background}

;	focused = Active workspace on focused monitor
	label-focused = %icon%
;	label-focused-background = ${colors.background}
	label-focused-background = #0000000	
	label-focused-foreground = ${colors.i3}
	label-focused-underline = ${colors.i3}
	label-focused-padding = 2

;	unfocused = Inactive workspace on any monitor
	label-unfocused = %icon%
	label-unfocused-padding = 2
	label-unfocused-foreground = ${colors.foreground-alt}

;	urgent = Workspace with urgency hint set
	label-urgent = %icon%
	label-urgent-foreground = ${colors.alert}
;	label-urgent-background = ${colors.background}
	label-urgent-background = #0000000
	label-urgent-underline = ${colors.alert}
	label-urgent-padding = 2

;	NOTE: The label needs to match the name of the i3 workspace
	ws-icon-0 = 1; 
	ws-icon-1 = 2; 
	ws-icon-2 = 3; 
	ws-icon-3 = 4; 
	ws-icon-4 = 5; 
	ws-icon-5 = 6;
	ws-icon-6 = 7;裡
	ws-icon-7 = 8; 
	ws-icon-8 = 9; 
	ws-icon-9 = 10; 
	ws-icon-default = 裡

;	Separator in between workspaces
;	label-separator = >



[module/xbacklight]
	type = internal/xbacklight

	format = <label>
	label = ﯧ %percentage%
	label-foreground = ${colors.bright}

;	Only applies if <ramp> is used
	ramp-0 = 
	ramp-1 = 
	ramp-2 = 
	ramp-3 = 
	ramp-4 = 



[module/cpu]
	type = internal/cpu
	interval = 1
	format-prefix = " "
	label-foreground = ${colors.cpu}
;	label-foreground = ${colors.foreground-alt}
	label =  %percentage-cores%



[module/memory]
	type = internal/memory
	interval = 1
	format-prefix = " "
	label =  %mb_used%
	label-foreground = ${colors.mem}
;	label-foreground = ${colors.foreground-alt}


[module/wlan]
	type = internal/network
	interface = wlp1s0
	interval = 2.0

	format-connected = <label-connected>
	label-connected = 直 %signal%%
	label-connected-foreground = ${colors.wifi}

	format-disconnected = <label-disconnected>
	label-disconnected = 睊
	label-disconnected-foreground = ${colors.alert}



[module/date]
	type = internal/date
	interval = 5

	date =
	date-alt = %A %b %d

	time = %l:%M %P
	time-alt = %l:%M %P

	label =  %time% %date%
	label-foreground = ${colors.polybar}



[module/pulseaudio]
	type = internal/pulseaudio

	format-volume = <label-volume> 
	label-volume = 墳 %percentage%%
	label-volume-foreground = ${colors.audio}

	label-muted = 婢 muted
	label-muted-foreground = ${colors.alert}



[module/battery]
	type = internal/battery
	battery = BAT1
	adapter = ADP1
	full-at = 100
	label-full = 100%

	format-charging = <label-charging>
	label-charging =  %percentage%%
	label-charging-foreground = ${colors.alert}

	format-discharging = <label-discharging>
	label-discharging =  %percentage%%
	label-discharging-foreground = ${colors.bat}



[module/temperature]
	type = internal/temperature
	interval = 5
	thermal-zone = 3
	warn-temperature = 50

	format = <label>
	format-warn = <label-warn>
;	format-warn-underline = ${colors.primary}

	label =  %temperature-c%
	label-warn = ! %temperature-c%
	label-warn-foreground = ${colors.alert}



[settings]
	screenchange-reload = true
;	compositing-background = xor
;	compositing-background = screen
;	compositing-foreground = source
;	compositing-border = over



[global/wm]
