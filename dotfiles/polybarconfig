[module/temperature]
	type = internal/temperature
	interval = 5
	thermal-zone = 3
	warn-temperature = 60

	format = <label>
	format-underline = ${colors.primary}
	format-warn = <label-warn>
	format-warn-underline = ${colors.primary}

	label =  %temperature-c%
	label-warn = ! %temperature-c%
	label-warn-foreground = ${colors.secondary}



