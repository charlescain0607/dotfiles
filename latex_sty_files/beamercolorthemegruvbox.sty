\setbeamercolor*{block body example}{bg=normal text.fg!75!black,fg=normal text.bg}
\setbeamercolor*{block title}{parent=structure,bg=normal text.fg!75!black,fg=structure.fg}
\setbeamercolor*{block title alerted}{use={normal text,alerted text},fg=alerted text.fg!75,bg=normal text.fg!75!black}
\setbeamercolor*{block title example}{use={normal text,example text},fg=example text.fg!75,bg=normal text.fg!75!black}

\setbeamercolor{item projected}{fg=black}

\setbeamercolor*{sidebar}{parent=palette primary}

\setbeamercolor{palette sidebar primary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=structure.fg}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar quaternary}{use=structure,fg=structure.fg}

